<h2><%= @lesson.name %> - Lesson Number <%= @lesson.number %></h2>

<p><%= @lesson.description %></p>


<button class='btn btn-info'><%= link_to "Edit", edit_lesson_path %></button>
<%= link_to "Delete", lesson_path(@lesson),
                      :data => {:confirm => "You sure?",
                                :method => 'delete'}%>
<%= link_to "Back", lessons_path %>

<% content_for(:navbar) do %>
  <%= link_to "Next lesson", lesson_path(@lesson.next) %>

  
<% end %>
